<?xml version="1.0" encoding="UTF-8"?>

<publication>

    <source>
        <directories external="../assets" generated="../generated-assets"/>
    </source>
  
  <!-- Common settings -->
  <common>
    <tableofcontents level="2"/>
  </common>

  <!-- HTML/Runestone-specific settings -->
  <html>
    <!-- Platform specification -->
    <platform host="runestone"/>
    
    <!-- Navigation configuration for linear progression -->
    <navigation logic="linear">
      <prev>no</prev>
      <up>no</up>
    </navigation>

    <!-- Index page settings -->
    <index-page ref="sec-intro"/>

    <!-- Calculator settings -->
    <calculator model="none"/>

    <!-- Base URL (update with your actual Runestone server URL) -->
    <baseurl href="https://runestone.academy/"/>

  </html>

  <!-- LaTeX/PDF settings (if needed for print version) -->
  <latex print="no" sides="one">
    <page>
      <geometry>letterpaper,margin=1in</geometry>
    </page>
  </latex>

</publication>

